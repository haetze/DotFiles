bat=$(acpiconf -i 0 | grep "Remaining capacity" | cut -c 21- | sed 's/.$//' )

RED='<fc=#ff0000>'
GREEN='<fc=#00ff00>'
NC='</fc>' # No Color
COLOR='<fc=#000000>'


if [ 10 -gt $bat ]
   then
	spd-say "beep"
fi

if [ $bat -gt 50 ]
   then
	COLOR=$GREEN
	
fi

if [ 10 -gt $bat ]
   then
	COLOR=$RED
fi

printf "${COLOR}${bat}%%${NC}"
