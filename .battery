bat=$(acpiconf -i 0 | grep "Remaining capacity" | cut -c 21- | sed 's/.$//' )
state=$(acpiconf -i 0 | grep "State" | cut -c 10-)
time=$(acpiconf -i 0 | grep "time" | cut -c 18-)

RED='<fc=#ff0000>'
GREEN='<fc=#00ff00>'
NC='</fc>' # No Color
COLOR='<fc=#FFFFFF>'


if [ 10 -gt $bat ] && [ $state == "discharging" ]
   then
		spd-say "beep"
fi

if [ $bat -gt 50 ]
   then
	COLOR=$GREEN
	
fi

if [ 10 -gt $bat ] && [ $state == "discharging" ]
   then
	COLOR=$RED
fi

printf "${COLOR}${bat}%%~${time}${NC}"
