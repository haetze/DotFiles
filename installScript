sudo apt-get -y update
sudo apt-get -y upgrade 
sudo apt-get -y install python-software-properties

sudo apt-get -y install vim
sudo apt-get -y install golang
sudo apt-get -y install nodejs
sudo apt-get -y install ghc
sudo apt-get -y install erlang 
sudo add-apt-repository ppa:hachre/dart
sudo apt-get update
sudo apt-get -y install darteditor dartsdk dartium
sudo apt-get -y install curl

cd /usr/share/vim/vim73/syntax/ 
sudo wget https://raw.githubusercontent.com/dart-lang/dart-vim-plugin/master/syntax/dart.vim
sudo wget http://golang.org/misc/vim/syntax/go.vim?m=text
sudo cp go.vim?m=text go.vim
sudo rm go.vim?m=text 


cd ~ 
mkdir -p ~/.vim/autoload ~/.vim/bundle 
curl https://raw.githubusercontent.com/tpope/vim-pathogen/master/autoload/pathogen.vim > ~/.vim/autoload/pathogen.vim
cd ~/.vim/bundle/ 
git clone  https://github.com/scrooloose/nerdtree.git
git clone git://github.com/tpope/vim-fugitive.git
git clone git://github.com/aperezdc/vim-template.git
git clone https://github.com/vim-scripts/AutoComplPop.git
git clone https://github.com/vim-scripts/L9.git
git clone https://github.com/vim-scripts/Tagbar.git

sudo apt-get -y install ctags


