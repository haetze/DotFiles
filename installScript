sudo apt-get -y upgrade 

sudo apt-get -y install vim
sudo apt-get -y install golang
sudo apt-get -y install nodejs
sudo apt-get -y install ghc
sudo apt-get -y install erlang 
sudo add-apt-repository ppa:hachre/dart
sudo apt-get update
sudo apt-get -y install darteditor dartsdk dartium

cd /usr/share/vim/vim73/syntax/ 
wget https://raw.githubusercontent.com/dart-lang/dart-vim-plugin/master/syntax/dart.vim
wget http://golang.org/misc/vim/syntax/go.vim?m=text
cp go.vim?m=text go.vim
rm go.vim?m=text 

