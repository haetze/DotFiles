snd=$(amixer get Master | awk '$0~/%/{print $4}' | tr -d '[]%' | tail -n +2)

RED='<fc=#ff0000>'
GREEN='<fc=#00ff00>'
NC='</fc>' # No Color
COLOR='<fc=#FFFFFF>'


if [ $snd -gt 30 ] && [ 80 -gt $snd ]
   then
	COLOR=$GREEN
	
fi

if [ $snd -gt 80 ] 
   then
	COLOR=$RED
fi

printf "${COLOR}${snd}%%${NC}"
